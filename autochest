local player = game.Players.LocalPlayer

local areas = {
    "Port Town",
    "Hydra Island",
    "Great Tree",
    "Floating Turtle",
    "Castle on the Sea",
    "Haunted Castle",
    "Sea of Treats"
}

local function findChestsInArea(area)
    local chestPath = workspace.Map:FindFirstChild(area)
    if not chestPath then
        warn("Area not found: " .. area)
        return nil
    end
    
    local chests = chestPath:FindFirstChild("Chests")
    if not chests then
        warn("No chests found in: " .. area)
        return nil
    end
    
    local chestList = {}
    for _, child in ipairs(chests:GetChildren()) do
        if child:IsA("BasePart") then
            table.insert(chestList, child)
        end
    end
    return chestList
end

local function teleportToChestsInArea(area)
    local chests = findChestsInArea(area)
    if not chests or #chests == 0 then
        warn("No valid chests to teleport to in area: " .. area)
        return
    end

    for _, chest in ipairs(chests) do
        player.Character.HumanoidRootPart.CFrame = chest.CFrame
        wait(1.5) -- Chờ 1.5 giây trước khi đến rương tiếp theo
    end
end

while true do
    for _, area in ipairs(areas) do
        teleportToChestsInArea(area)
    end
end
