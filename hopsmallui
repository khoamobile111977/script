-- Cáº¥u hÃ¬nh
local WEBHOOK_URL = "https://discord.com/api/webhooks/1425902530012905566/4680xvhQ5RF7STymyHMiItM9h6Wt6FIZ41zExZdUnLZ4jqOyCgYIKDaBGcpEUR2CmJPl"

local BOSSES = {
    "Stone [Lv. 1550] [Boss]",
    "Hydra Leader [Lv. 1675] [Boss]",
    "Kilo Admiral [Lv. 1750] [Boss]",
    "Captain Elephant [Lv. 1875] [Boss]",
    "Beautiful Pirate [Lv. 1950] [Boss]"
}

local notifiedBosses = {}

-- Gá»­i webhook Discord
local function sendWebhook(bossName)
    local jobId = game.JobId
    print("[Boss Tracker] Äang gá»­i webhook cho:", bossName)
    
    local data = {
        ["content"] = string.format("ðŸ”” **Boss Spawn Alert!**\n\n**Boss:** %s\n**Server ID:** ```%s```", 
            bossName, 
            jobId
        ),
        ["username"] = "Boss Tracker"
    }
    
    local success, response = pcall(function()
        return request({
            Url = WEBHOOK_URL,
            Method = "POST",
            Headers = {
                ["Content-Type"] = "application/json"
            },
            Body = HttpService:JSONEncode(data)
        })
    end)
    
    if success then
        print("[Boss Tracker] âœ“ Webhook gá»­i thÃ nh cÃ´ng!")
    else
        warn("[Boss Tracker] âŒ Lá»—i gá»­i webhook:", response)
    end
end

-- Kiá»ƒm tra boss cÃ³ spawn khÃ´ng
local function checkBossSpawned(bossFolder, bossName)
    print("[Boss Tracker] Checking boss folder:", bossName)
    print("[Boss Tracker] Children count:", #bossFolder:GetChildren())
    
    -- In ra táº¥t cáº£ children Ä‘á»ƒ debug
    for i, child in ipairs(bossFolder:GetChildren()) do
        print("[Boss Tracker] Child " .. i .. ":", child.Name, child.ClassName)
    end
    
    -- Náº¿u folder cÃ³ báº¥t ká»³ children nÃ o = boss Ä‘Ã£ spawn
    local hasChildren = #bossFolder:GetChildren() > 0
    
    if hasChildren then
        if not notifiedBosses[bossName] then
            notifiedBosses[bossName] = true
            print("[Boss Tracker] âœ“ PhÃ¡t hiá»‡n boss:", bossName)
            print("[Boss Tracker] Äang gá»­i webhook...")
            sendWebhook(bossName)
            
            -- Theo dÃµi khi children bá»‹ xÃ³a = boss cháº¿t
            local connection
            connection = bossFolder.ChildRemoved:Connect(function()
                if #bossFolder:GetChildren() == 0 then
                    notifiedBosses[bossName] = nil
                    print("[Boss Tracker] Boss Ä‘Ã£ cháº¿t:", bossName)
                    connection:Disconnect()
                end
            end)
        else
            print("[Boss Tracker] Boss Ä‘Ã£ Ä‘Æ°á»£c thÃ´ng bÃ¡o trÆ°á»›c Ä‘Ã³:", bossName)
        end
        return true
    else
        print("[Boss Tracker] Folder trá»‘ng, boss chÆ°a spawn:", bossName)
    end
    return false
end

-- Setup listener cho boss folder
local function setupBossListener(bossFolder, bossName)
    print("[Boss Tracker] âœ“ Äang theo dÃµi:", bossName)
    
    local initialCheckDuration = 60 -- 60 giÃ¢y = 1 phÃºt
    local checkInterval = 5 -- Check má»—i 5 giÃ¢y
    local startTime = tick()
    local initialCheckActive = true
    
    -- Láº·p check trong 1 phÃºt Ä‘áº§u
    task.spawn(function()
        while initialCheckActive do
            local elapsed = tick() - startTime
            if elapsed >= initialCheckDuration then
                initialCheckActive = false
                print("[Boss Tracker] Káº¿t thÃºc giai Ä‘oáº¡n check ban Ä‘áº§u cho:", bossName)
                break
            end
            
            checkBossSpawned(bossFolder, bossName)
            task.wait(checkInterval)
        end
    end)
    
    -- Event listener cho boss spawn má»›i (hoáº¡t Ä‘á»™ng song song)
    bossFolder.ChildAdded:Connect(function(child)
        print("[Boss Tracker] ChildAdded event - Boss spawn:", bossName)
        task.wait(0.1)
        checkBossSpawned(bossFolder, bossName)
    end)
end

-- Khá»Ÿi táº¡o boss tracker
local function initBossTracker()
    local enemySpawns = workspace:WaitForChild("_WorldOrigin", 10)
    if not enemySpawns then 
        warn("[Boss Tracker] KhÃ´ng tÃ¬m tháº¥y _WorldOrigin")
        return
    end
    
    enemySpawns = enemySpawns:WaitForChild("EnemySpawns", 10)
    if not enemySpawns then 
        warn("[Boss Tracker] KhÃ´ng tÃ¬m tháº¥y EnemySpawns")
        return
    end
    
    for _, bossName in ipairs(BOSSES) do
        local bossFolder = enemySpawns:FindFirstChild(bossName)
        if bossFolder then
            setupBossListener(bossFolder, bossName)
        else
            warn("[Boss Tracker] KhÃ´ng tÃ¬m tháº¥y boss folder:", bossName)
        end
    end
end

